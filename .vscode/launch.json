{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug C++ on WSL",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/bin/rest_sandbox",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        { "description": "Enable pretty-printing", "text": "-enable-pretty-printing", "ignoreFailures": true }
      ]
    }
  ]
}